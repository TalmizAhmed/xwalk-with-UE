{
    "definitions": [
        {
            "title": "Dropdown List",
            "id": "drop-down",
            "plugins": {
              "xwalk": {
                "page": {
                  "resourceType": "core/fd/components/form/dropdown/v1/dropdown",
                  "template": {
                    "jcr:title": "Drop Down List",
                    "fieldType": "drop-down",
                    "enabled": true,
                    "visible": true
                  }
                }
              }
            }
        }
    ],
    "models": [
        {
            "id": "drop-down",
            "fields": [
                {
                    "component": "container",
                    "name": "basic",
                    "label": "Basic",
                    "collapsible": false,
                    "fields": [
                        {
                            "...": "./_common.json#/basicfields"
                        },
                        {
                            "...": "./_common.json#/optionfields"
                        },
                        {
                            "component": "boolean",
                            "name": "multiSelect",
                            "label": "Allow multiple selection",
                            "valueType": "boolean",
                            "value": false
                        },
                        {
                            "component": "text",
                            "name": "default",
                            "label": "Default Options",
                            "valueType": "string",
                            "multi": true,
                            "condition": {
                                "==": [
                                    { "var": "multiSelect" },
                                    true
                                ]
                            }
                        },
                        {
                            "component": "text",
                            "name": "default",
                            "label": "Default Option",
                            "valueType": "string",
                            "condition": {
                                "!=": [
                                    { "var": "multiSelect" },
                                    true
                                ]
                            }
                        }
                    ]
                },
                {
                    "component": "container",
                    "name": "help",
                    "label": "Help Content",
                    "collapsible": true,
                    "fields": [
                        {
                            "...": "./_common.json#/helpfields"
                        }
                    ]
                },
                {
                    "component": "container",
                    "name": "validation",
                    "label": "Validation",
                    "collapsible": true,
                    "fields": [
                        {
                            "...": "./_common.json#/validationfields"
                        },
                        {
                            "component": "text",
                            "name": "validateExpMessage",
                            "label": "Script validation message",
                            "valueType": "string",
                            "description": "Displayed when validation script fails."
                        }
                    ]
                }
            ]
        }
    ]
}